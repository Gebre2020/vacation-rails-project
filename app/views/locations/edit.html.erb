<h1>Edit Location</h1>

<%= form_for(@location) do |f| %>

  <%= f.label :city %>
  <%= f.text_field :city %>
  <%= f.label :country %>
  <%= f.text_field :country %>
  
  <%= f.fields_for :trips do |t| %>
    <%= t.label :budget, "Budget Amount: " %>
    <%= t.number_field :budget, step: 0.01 %>

   <%= f.submit "Update Location" %>
<% end %>